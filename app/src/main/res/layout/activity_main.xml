<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tvBienvenido"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_gravity="center_vertical"
        android:fontFamily="@font/roboto"
        android:textSize="14dp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:text=""
        android:textColor="@color/colorNegroDark"
        tools:ignore="RtlCompat">

    </TextView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginTop="30dp"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/asuntosAtendidos"
            android:background="@drawable/boton_redondo"
            android:layout_width="110dp"
            android:layout_height="180dp"
            android:layout_weight="1"
            android:layout_margin="7dp"
            android:orientation="vertical">

            <ImageView
                android:layout_width="72dp"
                android:layout_height="71dp"
                android:layout_margin="16dp"
                android:layout_gravity="center_horizontal"
                android:backgroundTint="@color/black"
                android:src="@drawable/ic_asuntos_tratados"/>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="7dp"
                android:gravity="center_horizontal"
                android:textStyle="bold"
                android:text="Asuntos Atendidos"
                android:textColor="@color/colorNegroDark"/>
        </LinearLayout>



        <LinearLayout
            android:id="@+id/estadisticas"
            android:background="@drawable/boton_redondo"
            android:layout_width="110dp"
            android:layout_height="180dp"
            android:layout_weight="1"
            android:layout_margin="7dp"
            android:orientation="vertical">



            <ImageView
                android:layout_width="72dp"
                android:layout_height="71dp"
                android:layout_margin="16dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/ic_estadisticas_congre"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="7dp"
                android:layout_weight="0.9"
                android:textColor="@color/colorNegroDark"
                android:gravity="center_horizontal"
                android:textStyle="bold"
                android:text="Estadisticas" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal">

        <LinearLayout
            android:background="@drawable/boton_redondo"
            android:layout_width="110dp"
            android:layout_height="180dp"
            android:layout_weight="1"
            android:layout_margin="7dp"
            android:orientation="vertical">

            <ImageView
                android:layout_width="72dp"
                android:layout_height="71dp"
                android:layout_gravity="center_horizontal"
                android:layout_margin="16dp"
                android:backgroundTint="@color/black"
                android:src="@drawable/ic_pendientes"/>


            <TextView
                android:id="@+id/botonPendientes"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="7dp"
                android:textColor="@color/colorNegroDark"
                android:gravity="center_horizontal"
                android:textStyle="bold"
                android:text="Pendientes en Reuniones" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/reunionTrimesral"
            android:background="@drawable/boton_redondo"
            android:layout_width="110dp"
            android:layout_height="180dp"
            android:layout_weight="1"
            android:layout_margin="7dp"
            android:orientation="vertical">



            <ImageView
                android:layout_width="72dp"
                android:layout_height="71dp"
                android:layout_gravity="center_horizontal"
                android:layout_margin="16dp"
                android:backgroundTint="@color/black"
                android:src="@drawable/ic_trimestrales"
                android:text="HERRAMIENTAS" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="7dp"
                android:textColor="@color/colorNegroDark"
                android:gravity="center_horizontal"
                android:textStyle="bold"
                android:text="Reuniones Trimestrales" />
        </LinearLayout>

    </LinearLayout>

    <RelativeLayout
        android:gravity="bottom"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:paddingStart="10dp"
        android:background="#37474F"
        android:paddingEnd="10dp">

        <LinearLayout
            android:gravity="bottom"
            android:layout_gravity="bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/botonImprimirPedido"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:textStyle="bold"
                android:textSize="12dp"
                android:textColor="#FFFFFF"
                android:text="{JN} Development" />
        </LinearLayout>
    </RelativeLayout>


</LinearLayout>